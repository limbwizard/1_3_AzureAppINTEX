@model AzureAppINTEX.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImgLink" class="img-fluid" alt="Product Image">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Number of Parts:</strong> @Model.NumParts</p>
            <p><strong>Year:</strong> @Model.Year</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Primary Color:</strong> @Model.PrimaryColor</p>
            <!-- Include Secondary Color if you decide to display it -->
            <button type="button" class="btn btn-primary">Add to Cart</button>
        </div>
    </div>
</div>
